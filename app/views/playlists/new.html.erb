<div class="container">
  <div class="row">
    <div class="col">
      <h1>Hello</h1>
      <%= simple_form_for(@playlist) do |t| %>
        <%= t.input :name %>
        <%= t.input :acousticness, input_html: { class: 'custom-range' }, as: :range, type: "range" %>
        <%= t.input :danceability, input_html: { class: 'custom-range' }, as: :range, type: "range" %>
        <%= t.input :energy, input_html: { class: 'custom-range' }, as: :range, type: "range" %>
        <%= t.input :valence, input_html: { class: 'custom-range' }, as: :range, type: "range" %>
        <%= t.input :popularity, input_html: { class: 'custom-range' }, as: :range, type: "range" %>
        <%= t.submit "Create a playlist", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
