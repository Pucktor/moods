  <main class="main">

    <div class="main-searchbar">
      <%= form_tag playlists_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search a playlist"
        %>
      <% end %>
    </div>

    <div class="app">
      <div class="full hide-scroll">
        <ul class="hs">
            <% @playlists.each do |playlist| %>
              <%= link_to playlist_path(playlist) do %>
              <li class="item">
                  <h1><%= playlist.name %></h1>
                  <h1><i class="fas fa-play-circle"></i></h1>
              </li>
              <% end %>
            <% end %>
        </ul>
      </div>
    </div>

  </main>
