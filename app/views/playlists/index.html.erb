 <div class="grid-container">

  <header class="header">
    <h1 class="header__title">Music fitting your mood.</h1>
  </header>

  <aside class="sidenav">
    <%= link_to image_tag("moods-logo.png"), root_path, class: 'sidenav-logo'%>
    <ul class="sidenav__list">
      <h4><li class="sidenav__list-item" id="moods"><i class="fas fa-globe-asia"></i>Moods</li></h4>
      <h4><li class="sidenav__list-item" id="explore"><i class="fas fa-rocket"></i>Explore</li></h4>
      <h4><li class="sidenav__list-item" id="library"><i class="fas fa-compact-disc"></i>Library</li></h4>
      <h4><li class="sidenav__list-item" id="rooms"><i class="fas fa-cube"></i>Rooms</li></h4>
    </ul>
  </aside>

  <main class="main">
    <div class="main-searchbar">
      <%= form_tag playlists_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search your playlist"
        %>
      <% end %>
    </div>

    <div class="app">
      <div class="full hide-scroll">
        <ul class="hs">
            <% @playlists.each do |playlist| %>
              <%= link_to playlist_path(playlist) do %>
              <li class="item">
                  <h1><%= playlist.name %></h1>
                  <h1><i class="fas fa-play-circle"></i></h1>
              </li>
              <% end %>
            <% end %>
        </ul>
      </div>
    </div>

  </main>

  <footer class="footer">
    <div class="footer__copyright">&copy; 2018 MTH</div>
    <div class="footer__signature">Made with love by pure genius</div>
  </footer>
</div>
