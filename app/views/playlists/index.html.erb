<div class="container">
  <div class="row">
    <div class="col">
       <h1>All playlists</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_tag playlists_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search your playlist"
        %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "Create a new playlist", new_playlist_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @playlists.each do |playlist| %>
          <%= link_to playlist_path(playlist) do %>
          <div class="card">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://mpact.tv/wp-content/uploads/2015/06/musique-ambiance-960x480.jpg)">
            </div>
            <div class="d-flex justify-content-between">
              <span><%= playlist.name %></span>
              <span>XX songs</span>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
